<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="24dp"
        android:orientation="vertical">
        <TextView
            android:text="Login"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_input"
                android:paddingHorizontal="12dp"
                android:layout_width="match_parent"
                android:hint="Masukan Username"
                android:singleLine="true"
                android:ems="10"
                android:textSize="14sp"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="42dp">
            </com.google.android.material.textfield.TextInputEditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/usernameError"
            android:layout_gravity="left"
            android:visibility="gone"
            android:text="* Email tidak boleh kosong"
            android:padding="4dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:paddingHorizontal="12dp"
                android:layout_width="match_parent"
                android:hint="Masukan Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:ems="10"
                android:textSize="14sp"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="42dp">
            </com.google.android.material.textfield.TextInputEditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/passwordError"
            android:layout_gravity="left"
            android:visibility="gone"
            android:text="* Password tidak boleh kosong"
            android:padding="4dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/token_input"
                android:paddingHorizontal="12dp"
                android:layout_width="match_parent"
                android:hint="Masukan Token"
                android:singleLine="true"
                android:ems="10"
                android:textSize="14sp"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="42dp">
            </com.google.android.material.textfield.TextInputEditText>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tokenError"
            android:layout_gravity="left"
            android:text="* Token tidak boleh kosong"
            android:visibility="gone"
            android:padding="4dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:layout_marginTop="56dp"
            app:cardBackgroundColor="@color/colorOrange">
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>